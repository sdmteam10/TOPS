{
  "name": "tops",
  "version": "1.0.0",
  "description": "TOPS built with the MERN stack",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sdmteam10/TOPS.git"
  },
  "author": "Yulun Wu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sdmteam10/TOPS/issues"
  },
  "homepage": "https://github.com/sdmteam10/TOPS#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "bootstrap": "^5.1.1",
    "concurrently": "^6.2.1",
    "create-react-app": "^4.0.3",
    "express": "^4.17.1",
    "mongoose": "^6.0.6",
    "react-transition-group": "^4.4.2",
    "reactstrap": "^8.10.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.12"
  }
}
